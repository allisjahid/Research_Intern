<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/lightCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/lightValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="22dp"
            android:text="Light Sensor Value"
            android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/proximityCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/proximityValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="26dp"
            android:text="Proximity Sensor Value"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/accelerometerCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/accelerometerValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Accelerometer Sensor Value"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/gyroscopeCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/gyroscopeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Gyroscope Sensor Value"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Add similar CardViews for proximity, accelerometer, and gyroscope sensors -->

</RelativeLayout>
